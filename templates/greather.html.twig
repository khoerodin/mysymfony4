<table>
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>PRICE</th>
        <th>DESCRIPTION</th>
        <th>CATEGORY</th>
        <th>ACTION</th>
    </tr>

    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.category.name }}</td>
            <td>
                <a href="/product/edit/{{ product.id }}">edit</a>
            </td>
        </tr>
    {% endfor %}
</table>

<style>
    * {
        font-family: 'Menlo', 'Monaco', monospace;
        font-size: medium;
    }
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #ccc;
    }
</style>

